<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="OptionItemStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_baseline_keyboard_arrow_right_24</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingRight">@dimen/dimens_30dp</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginLeft">@dimen/dimens_15dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginLeft">@dimen/dimens_15dp</item>
        <item name="android:layout_marginRight">@dimen/dimens_15dp</item>
        <item name="android:layout_marginBottom">@dimen/dimens_15dp</item>
        <item name="android:layout_marginTop">@dimen/dimens_5dp</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_height">@dimen/dimens_55dp</item>
        <item name="android:layout_marginBottom">@dimen/dimens_5dp</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/dimens_200dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
